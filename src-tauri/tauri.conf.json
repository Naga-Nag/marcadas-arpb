{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "presentismo-arpb",
  "version": "0.1.0",
  "identifier": "com.arpb.presentismo",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun -b run dev --host",
    "beforeBuildCommand": "bun -b run build"
  },
  "app": {
    "windows": [
      {
        "title": "Presentismo",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "windows": {
      "allowDowngrades": true,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "offlineInstaller"
      }
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
